{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<div class="site-header-content outer{{#match @custom.header_style "Left aligned"}} left-aligned{{/match}}{{#unless @custom.show_publication_cover}}{{#match @custom.header_style "Hidden"}} no-content{{/match}}{{/unless}}">

    {{#if @custom.show_publication_cover}}
        {{#if @site.cover_image}}
            <img class="site-header-cover"
                srcset="{{img_url @site.cover_image size="s"}} 300w,
                        {{img_url @site.cover_image size="m"}} 600w,
                        {{img_url @site.cover_image size="l"}} 1000w,
                        {{img_url @site.cover_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url @site.cover_image size="xl"}}"
                alt="{{@site.title}}"
            />
        {{/if}}
    {{/if}}

    {{#match @custom.header_style "!=" "Hidden"}}
        <div class="site-header-inner inner">
            {{#match @custom.navigation_layout "Logo on cover"}}
                {{#if @site.logo}}
                    <img class="site-logo" src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    <h1 class="site-title">{{@site.title}}</h1>
                {{/if}}
            {{/match}}
            {{#if @site.description}}
                <p class="site-description">{{@site.description}}</p>
            {{/if}}
        </div>
    {{/match}}

</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">

<section class="p-outer hero">
    <div class="p-inner p-hero">
        <!-- Floating shapes -->
        <div class="shape shape1">/</div>
        <div class="shape shape2">/</div>
        <div class="shape shape3">/</div>
        <div class="shape shape4">/</div>
        <div class="shape shape5">/</div>
        
        <div class="p-hero-left">
            <div class="wrapper">
                <p>Level up with insights and advice on pitching, fundraising, and building.</p>
            </div>
        </div>
        <div class="p-hero-left">
            <a class="footer-cta-button gh-portal-close" href="#/portal" data-portal="">
                <div class="footer-cta-input">Enter your email</div>
                <span>Subscribe</span>
            </a>
        </div>
    </div>
</section>

<section>
    <div class="inner posts">
        <div class="post-feed-header section">
            <h2 class="post-feed-title">Pitch Breakdowns</h2>
            <a class="explore-more-btn" href="tag/decode">
                <span>Explore more</span>
                <i class="fas fa-thin fa-lg fa-arrow-right-long"></i>
            </a>
        </div>
        <div class="post-feed">
            {{#get "posts" limit="3" include="tags" filter="tags:[pitch-breakdown]" order="published_at desc"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}
        {{pagination}}
        </div>
</section>
 
<section class="tools-section" id="resources-section">
    <div class="inner posts">
        <div class="post-feed-header section">
            <h2 class="post-feed-title">Tools</h2>
            <a class="explore-more-btn" href="tag/{{@custom.resources_tag}}">
                <span>Explore all tools</span>
                <i class="fas fa-thin fa-lg fa-arrow-right-long"></i>
            </a>
        </div>
        <div class="tools-content">
            <aside class="tools-sidebar">
                <ul class="sidebar-nav">
                    <li><button class="sidebar-button tag-button all-tools-button active" data-tag="{{@custom.resources_tag}}">All Tools</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-customer-engagement">Customer Engagement</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-collaboration-productivity">Collaboration & Productivity</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-finance">Finance</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-sales-crm">Sales & CRM</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-hr-payroll">HR & Payroll</button></li>
                    <li><button class="sidebar-button tag-button" data-tag="tools-security-compliance">Security & Compliance</button></li>
                </ul>
            </aside>
            <div class="post-feed tools-posts">
                {{#get "posts" include="tags" filter="tags:{{@custom.resources_tag}}" order="published_at desc"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
                {{pagination}}
            </div>
        </div>
    </div>
</section>

<section>
    <div class="inner posts">
        <div class="post-feed-header section">
            <h2 class="post-feed-title">Recent Articles</h2>
            <a class="explore-more-btn" href="tag/foundry">
                <span>Explore more</span>
                <i class="fas fa-thin fa-lg fa-arrow-right-long"></i>
            </a>
        </div>
        <div class="post-feed">
            {{#get "posts" limit="3" include="tags" filter="tags:[foundry]" order="published_at desc"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}
        
        {{pagination}}

        </div>
</section>

</main>

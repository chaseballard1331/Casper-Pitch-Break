{{!< default}}

<main id="site-main" class="site-main outer">
    <div class="inner posts">
        <h1 class="resource-title">Tools</h1>
        <div class="post-feed">
            {{#get "posts" filter="tags:[{{@custom.resources_tag}}]" include="tags" as |posts|}}
                {{#if posts}}
                    {{#foreach posts}}
                        {{> post-card}}
                    {{/foreach}}
                {{/if}}
            {{/get}}
        </div>
    </div>
</main>